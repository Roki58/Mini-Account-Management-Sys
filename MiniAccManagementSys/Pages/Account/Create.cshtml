@page
@model MiniAccManagementSys.Pages.Account.CreateModel
@{
    ViewData["Title"] = "Create Account";
}

<h2>Create New Account</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Account.Name"></label>
        <input asp-for="Account.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Account.AccountType"></label>
        <input asp-for="Account.AccountType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Account.ParentId">Parent Account ID (optional)</label>
        <input asp-for="Account.ParentId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
</form>
