@page
@model MiniAccManagementSys.Pages.Account.CreateModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">Create New Account</h4>
        </div>
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Account.Name" class="form-label fw-semibold"></label>
                    <input asp-for="Account.Name" class="form-control" placeholder="e.g., Cash, Bank" />
                    <span asp-validation-for="Account.Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Account.AccountType" class="form-label fw-semibold"></label>
                    <input asp-for="Account.AccountType" class="form-control" placeholder="e.g., Asset, Expense" />
                    <span asp-validation-for="Account.AccountType" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Account.ParentId" class="form-label fw-semibold">Parent Account ID (optional)</label>
                    <input asp-for="Account.ParentId" class="form-control" />
                    <span asp-validation-for="Account.ParentId" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success px-4">💾 Save Account</button>
                    <a asp-page="/Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
