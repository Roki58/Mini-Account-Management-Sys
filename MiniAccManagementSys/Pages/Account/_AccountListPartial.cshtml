@model List<MiniAccManagementSys.Models.ChartOfAccount>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Parent</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model)
        {
            <tr>
                <td>@acc.Name</td>
                <td>@(acc.ParentId.HasValue ? acc.ParentId.ToString() : "None")</td>
                <td>@acc.AccountType</td>
                <td>
                    <a asp-page="/Account/Edit" asp-route-id="@acc.Id">Edit</a> |
                    <a asp-page="/Account/Delete" asp-route-id="@acc.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>