@page
@model MiniAccManagementSys.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Mini Account Management System</h1>
        <p class="lead text-muted">Manage your chart of accounts and financial vouchers efficiently.</p>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Chart of Accounts</h3>
        <a asp-page="/Account/Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-lg"></i> Add New Account
        </a>
    </div>

    <div class="card shadow-sm rounded-4">
        <div class="card-body">
            <partial name="~/Pages/Account/_AccountListPartial.cshtml" model="Model.Accounts" />
        </div>
    </div>
</div>
